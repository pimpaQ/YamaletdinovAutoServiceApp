<Page x:Class="автосервис.ServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:автосервис"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicePage">

    <Grid Background="White">
        <Border Background="Wheat" Width="400" Height="120" CornerRadius="30" BorderBrush="Black">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Gray"/>
            </Border.Effect>
            <Button Content="Go" Height="30" Width="175" Background="Orange" BorderBrush="Black" Click="Button_Click"/>
        </Border>
    </Grid>
</Page>
